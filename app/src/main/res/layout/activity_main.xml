<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name :"
            android:textColor="@color/clo_blue"
            android:layout_marginStart="5dp"
            android:layout_marginTop="50dp"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bello kabiru femi"
            android:textAllCaps="true"
            android:layout_marginTop="45dp"
            android:layout_marginStart="130dp"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Slack Username :"
            android:textColor="@color/clo_blue"
            android:layout_marginStart="5dp"
            android:layout_marginTop="120dp"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvSlackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="bello kabiru femi"
            android:textAllCaps="true"
            android:layout_marginTop="115dp"
            android:layout_marginStart="130dp"
            android:textSize="25sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Github Handle :"
            android:textColor="@color/clo_blue"
            android:layout_marginStart="5dp"
            android:layout_marginTop="190dp"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvGithubHandle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="https://github.com/kabirufemi"
            android:textColor="@color/blue"
            android:layout_marginTop="187dp"
            android:layout_marginStart="130dp"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Details :"
            android:textColor="@color/clo_blue"
            android:layout_marginStart="5dp"
            android:layout_marginTop="260dp"
            android:textSize="15sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/tvPersonalDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I am an Android Application Developer, Currently an intern at HNGx"
            android:layout_marginTop="255dp"
            android:layout_marginStart="130dp"
            android:textSize="20sp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/btnEditAll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="400dp"
            android:text="Edit The Details"
            android:textSize="25dp"
            android:textAllCaps="true"/>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
